<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="200dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter 4 digit code"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text3"
            android:textColor="#000000"
            android:layout_marginEnd="5dp"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:text="A four-digit code should have come to your email address that you indicated."
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:layout_width="55dp"
                android:layout_height="90dp"
                android:id="@+id/pin1"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:background="@drawable/pin"/>
            <EditText
                android:layout_width="55dp"
                android:id="@+id/pin2"
                android:layout_height="90dp"
                android:background="@drawable/pin"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:layout_marginStart="30dp"/>
            <EditText
                android:layout_width="55dp"
                android:layout_height="90dp"
                android:id="@+id/pin3"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:background="@drawable/pin"
                android:layout_marginStart="30dp"/>
            <EditText
                android:layout_width="55dp"
                android:layout_height="90dp"
                android:id="@+id/pin4"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="numberPassword"
                android:background="@drawable/pin"
                android:layout_marginStart="30dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pinerror"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_dark"
            android:text="Pin must be entered"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selectors_box"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:id="@+id/conformbtn"
                android:layout_marginStart="20dp"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:text="@string/cancel"
                android:textColor="#4280EF"
                android:id="@+id/cancelbtn"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>