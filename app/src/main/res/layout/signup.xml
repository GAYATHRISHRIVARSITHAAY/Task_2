<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">
    <TextView
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;  Back"
        android:clickable="true"
        android:textColor="#2c2c2c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"

        />
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="#4280EF"
        android:textSize="40sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/back1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/pls_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please create a new account"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/pls_create"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Type something longer here..."
        android:paddingStart="15dp"
        android:textStyle="italic"
        android:id="@+id/email_box"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_box"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="Email"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_box"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:id="@+id/password_box"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_box"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/Password1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_box"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter your Password"
        android:paddingStart="15dp"
        android:inputType="textPassword"
        android:id="@+id/password_box1"
        app:layout_constraintTop_toBottomOf="@+id/Password1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_box"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree the terms of use and privacy policy"
        android:id="@+id/checkbox"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/password_box1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:background="@drawable/sign_box"
        android:id="@+id/signupbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
